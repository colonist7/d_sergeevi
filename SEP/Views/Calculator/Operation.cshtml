@model CalculatorViewModel;

@{
    ViewData["Title"] = "Operation";
    var value = "";
}

<h1>Operation</h1>

@if (Model.result_code.Equals("ok"))
{
    var sign = "";
    switch(Model.operation)
    {
        case "add":
            sign = "+";
            break;
        case "sub":
            sign = "-";
            break;
        case "mul":
            sign = "x";
            break;
        case "div":
            sign = ":";
            break;
    }
    value = Model.value_a + " " + sign + " " + Model.value_b + " = " + Model.result;
}
else
{
    value = Model.result_code;
}


<h1>
    @value
</h1>